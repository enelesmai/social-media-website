<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
        </span>
        <span class="profile-link">
          <%= request_friend(user) %>
        </span>
        <span class="profile-link">
          <%= requested_friendship(user) %>
        </span>
        <span class="profile-link">
          <%= pending_invitation(user) %>
        </span>
      </li>
    <% end %>
  </ul>
</section>
